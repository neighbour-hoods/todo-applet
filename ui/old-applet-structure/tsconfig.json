{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "skipLibCheck": true,
    "incremental": true,
    "outDir": "dist",
    "rootDir": "./src",
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts"]
}
